        android:background="@drawable/bec"
        app:srcCompat="@drawable/pack2" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="69dp"
        android:layout_height="78dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="283dp"
        android:layout_marginBottom="354dp"
        android:background="@drawable/bec"
        app:srcCompat="@drawable/card1" />

    <Button
        android:id="@+id/trading"
        android:layout_width="204dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="142dp"
        android:alpha="0.9"
        android:textStyle="bold"
        android:background="@drawable/bac_button4"
        android:text="TRADING"
        android:textColor="@color/black"
        android:textSize="24dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="113dp"
        android:layout_height="109dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="250dp"
        android:layout_marginTop="514dp"


        app:srcCompat="@drawable/mark" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="159dp"
        android:layout_height="126dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="504dp"

        app:srcCompat="@drawable/tre" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="122dp"
        android:layout_height="113dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="275dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="13dp"
        android:background="@drawable/bec"
        app:srcCompat="@drawable/cup" />

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="693dp"
        android:layout_marginEnd="158dp"
        android:layout_marginBottom="43dp"
        android:text="@string/logout"
        android:textStyle="bold"
        android:background="@drawable/bac_button4"/>


</RelativeLayout>
